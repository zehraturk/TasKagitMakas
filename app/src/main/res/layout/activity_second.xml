        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_kullanici2skor"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="44dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buton_makas"
        app:layout_constraintEnd_toEndOf="@+id/buton_makas"
        app:layout_constraintStart_toStartOf="@+id/buton_kagit"
        app:layout_constraintTop_toTopOf="@+id/tv_kullanici1skor" />

    <TextView
        android:id="@+id/textView_bilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_sonKazanan"
        app:layout_constraintStart_toStartOf="@+id/textView_sonKazanan" />

</android.support.constraint.ConstraintLayout>