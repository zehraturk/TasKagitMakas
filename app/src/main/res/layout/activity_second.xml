        app:layout_constraintBaseline_toBaselineOf="@+id/buton_kagit"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buton_kagit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:text="@string/Kagit"
        app:layout_constraintStart_toEndOf="@+id/buton_tas"
        app:layout_constraintTop_toBottomOf="@+id/textView_kullanici2skor" />

    <Button
        android:id="@+id/buton_makas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/Makas"
        app:layout_constraintBaseline_toBaselineOf="@+id/buton_kagit"
        app:layout_constraintStart_toEndOf="@+id/buton_kagit" />

    <TextView
        android:id="@+id/textView_sonKazanan"
        android:layout_width="188dp"
        android:layout_height="46dp"
